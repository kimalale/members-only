<div class="container">
    <div class="profile-view">
        <% if current_user %>
            <h1>Hello, <%= current_user.first_name %></h3>
        <% else %>
            <h1>Hello, Anonymous</h3>
        <% end %>
        <div class="avatar">
            <%= image_tag("ye#{rand(1..4)}.jpeg", class: "ye", alt: 'ye', size: '150x150')  %>
        </div>
        <div class="usern">
            <% if current_user %>
                <h2><%= current_user.first_name %> <%= current_user.last_name %></h2>
            <% else %>
                <h2>John Doe</h2>
            <% end %>   
        </div>
        <div class="btn-center">
            <% if current_user %>

                <%= link_to profile_edit_path do %>
                    <%= button_tag "Edit Profile", class: "btn" %> 
                <% end %>
                <%= link_to logout_path data: {turbo_method: :delete} do %>
                    <%= button_tag "Logout", class: "btn" %> 
                <% end %>
            <% else %>
                <%= link_to login_path do %>
                    <%= button_tag "Login", class: "btn" %> 
                <% end %>
                <%= link_to signup_path do %>
                    <%= button_tag "Signup", class: "btn" %> 
                <% end %>
            <% end %>         
        </div>
    </div>
    <div class="log">
        <p>Updates</p>
    </div>
</div>


    