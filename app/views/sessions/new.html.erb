    <div class="container">
        <h3>Login</h3>
        <%= form_for(:session, url: login_path) do | f | %>
            <div class="form-details login">

                <!-- Email and phone number section -->
                <div class="col">
                    <%= f.label :email, "EMAIL:" %>
                    <%= f.email_field :email, placeholder: "johndoe@email.com" %>
                    <!-- small id="error_email" class="error" value=""></small> -->
                </div>

                        <!-- Pass word section -->
                <div class="col">
                    <%= f.label :password, "PASSWORD:" %>
                    <%= f.password_field :password, placeholder: "Password" %>
                    <!--  <small id="error_pwd" class="error" value=""></small> -->
                </div>

            </div>
            <div class="btn-center">
                <%= f.submit "Login", class: "btn" %>
            </div>

        <% end %>
        <div class="cto-option">
            <p id="sign-in">Don't have an account?  <%= link_to "Sign Up", signup_path %></p>
        </div>
</div>


